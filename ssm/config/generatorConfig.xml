<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
<!--
	<properties resource="conn.properties" />
	  -->
	  <!-- 处理1 -->
	 <classPathEntry location="E:\DRIVER\mysql-connector-java-5.1.30.jar"/>
	<!-- 指定运行环境是mybatis3的版本 -->
	<context id="testTables" targetRuntime="MyBatis3">

		<commentGenerator>
		<!-- 是否取消注释 -->
			<property name="suppressAllComments" value="true" />
			 <!-- 是否生成注释代时间戳 -->
			<property name="suppressDate" value="true" />
		</commentGenerator>
		<!-- 处理2   jdbc 连接信息 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/ssm?useUnicode=true&amp;characterEncoding=UTF-8" userId="root" password="lsx520">
		</jdbcConnection>
		
        <!--处理3   targetPackage指定模型在生成在哪个包 ,targetProject指定项目的src,-->        
		<javaModelGenerator targetPackage="cn.wb.ssm.entity"
			targetProject="ssm/src/main/java">
			<!-- 去除字段前后空格 -->
			<property name="trimStrings" value="false" />
		</javaModelGenerator>
		<!--处理4   配置SQL映射文件生成信息 -->
		<sqlMapGenerator targetPackage="cn.wb.ssm.dao"
			targetProject="ssm/src/main/java" />
		<!-- 处理5   配置dao接口生成信息-->
		<javaClientGenerator type="XMLMAPPER" targetPackage="cn.wb.ssm.dao" targetProject="ssm/src/main/java" />

		<table tableName="goods" domainObjectName="Goods"/>
			
		<!--  <table tableName="supplier" domainObjectName="Supplier"/>  -->
	</context>
</generatorConfiguration>